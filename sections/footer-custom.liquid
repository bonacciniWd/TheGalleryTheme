<footer class="footer section-{{ section.id }}">
  <div class="footer-content">
    <div class="footer-group footer-group--gallery">
      {% if section.settings.logo_gallery != blank %}
        <img src="{{ section.settings.logo_gallery | image_url: width: 300 }}" alt="{{ section.settings.logo_gallery.alt | escape }}" class="footer-logo">
      {% else %}
        <img src="{{ 'logo.svg' | asset_url }}" alt="Logo The Gallery" class="footer-logo">
      {% endif %}
      <div class="footer-copyright">
        <p>{{ 'now' | date: "%Y" }} &copy; {{ section.settings.copyright_text_gallery }}</p>
        <p>{{ section.settings.rights_reserved_text }}</p>
      </div>
    </div>

    <div class="footer-group footer-group--vrz">
      {% if section.settings.logo_vrz != blank %}
        <img src="{{ section.settings.logo_vrz | image_url: width: 150 }}" alt="{{ section.settings.logo_vrz.alt | escape }}" class="footer-logo-1">
      {% else %}
        <img src="{{ 'vrz.png' | asset_url }}" alt="Logo VRZ" class="footer-logo-1">
      {% endif %}
      <p class="footer-coded-by">{{ section.settings.coded_by_text }}</p>
    </div>
  </div>
</footer>

<style>
  /* Estilos do Footer */
  .section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding: {{ section.settings.padding_vertical_mobile }}px 20px; /* Ajuste para mobile */
    text-align: center;
    border-top: 1px solid {{ section.settings.border_color }};
  }

  .section-{{ section.id }} .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    max-width: {{ section.settings.content_max_width }}px;
    margin: 0 auto;
  }

  .section-{{ section.id }} .footer-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  .section-{{ section.id }} .footer-logo {
    max-width: {{ section.settings.logo_gallery_width_mobile }}px; /* Ajuste para mobile */
    height: auto;
    transition: opacity 0.3s ease-in-out;
  }

  .section-{{ section.id }} .footer-logo-1 {
    max-width: {{ section.settings.logo_vrz_width_mobile }}px; /* Ajuste para mobile */
    height: auto;
    transition: opacity 0.3s ease-in-out;
  }

  .section-{{ section.id }} .footer-logo:hover {
    opacity: 0.8;
  }

  .section-{{ section.id }} .footer-copyright,
  .section-{{ section.id }} .footer-coded-by {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size_mobile }}px; /* Ajuste para mobile */
    line-height: 1.5;
    text-align: center;
  }

  /* Layout para desktop */
  @media (min-width: 769px) {
    .section-{{ section.id }} {
      padding: {{ section.settings.padding_vertical_desktop }}px 20px; /* Ajuste para desktop */
    }

    .section-{{ section.id }} .footer-content {
      flex-direction: row;
      justify-content: center;
      gap: 40px;
    }

    .section-{{ section.id }} .footer-logo {
      max-width: {{ section.settings.logo_gallery_width_desktop }}px; /* Ajuste para desktop */
    }

    .section-{{ section.id }} .footer-logo-1 {
      max-width: {{ section.settings.logo_vrz_width_desktop }}px; /* Ajuste para desktop */
    }

    .section-{{ section.id }} .footer-copyright,
    .section-{{ section.id }} .footer-coded-by {
      font-size: {{ section.settings.text_size_desktop }}px; /* Ajuste para desktop */
    }
  }
</style>

