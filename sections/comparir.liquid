{% schema %}
{
  "name": "Image Comparator",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_a",
      "label": "Imagem A"
    },
    {
      "type": "image_picker",
      "id": "image_b",
      "label": "Imagem B"
    }
  ],
  "presets": [
    {
      "name": "Comparador de Imagens"
    }
  ]
}
{% endschema %}

<div class="image-comparator" data-id="{{ section.id }}">
  <div class="image-comparator__container">
    {% if section.settings.image_a %}
      <img src="{{ section.settings.image_a | image_url: width: 1200 }}" alt="Imagem A" class="image-comparator__image">
    {% endif %}
    
    <div class="image-comparator__overlay">
      {% if section.settings.image_b %}
        <img src="{{ section.settings.image_b | image_url: width: 1200 }}" alt="Imagem B" class="image-comparator__image">
      {% endif %}
    </div>

    <input type="range" min="0" max="100" value="50" class="image-comparator__slider" aria-label="Comparar imagens">
  </div>
</div>

<style>
.image-comparator__container {
  position: relative;
  width: 100%;
  max-width: 800px;
  overflow: hidden;
  border-radius: 16px;
  box-shadow: 0 0 20px rgba(0,0,0,0.1);
}

.image-comparator__image {
  display: block;
  width: 100%;
  height: auto;
}

.image-comparator__overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 50%;
  overflow: hidden;
  transition: width 0.25s ease;
}

.image-comparator__slider {
  position: absolute;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  appearance: none;
  height: 6px;
  background: #ddd;
  border-radius: 3px;
  cursor: pointer;
}

.image-comparator__slider::-webkit-slider-thumb {
  appearance: none;
  width: 20px;
  height: 20px;
  background: #000;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 0 0 5px rgba(0,0,0,0.3);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.image-comparator').forEach(function(comparator) {
    const slider = comparator.querySelector('.image-comparator__slider');
    const overlay = comparator.querySelector('.image-comparator__overlay');

    function updateOverlay() {
      overlay.style.width = slider.value + '%';
    }

    slider.addEventListener('input', updateOverlay);
  });
});
</script>
