{{ 'section-hero-amaterasu-game.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .hero-amaterasu-game {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.section_min_height }}px; /* Altura mínima da seção */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: {{ section.settings.text_color }};
    overflow: hidden; /* Garante que a imagem de fundo não vaze */
    padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px 20px {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .hero-amaterasu-game {
      padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
    }
  }

  .hero-amaterasu-game::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('{% if section.settings.background_image %}{{ section.settings.background_image | image_url: width: 1920 }}{% else %}{{ 'placeholder-amaterasu.jpg' | asset_url }}{% endif %}');
    background-size: cover;
    background-position: {{ section.settings.image_position }};
    background-repeat: no-repeat;
    filter: brightness({{ section.settings.overlay_brightness | divided_by: 100.0 }}); /* Escurecer/Clarear a imagem */
    z-index: 1;
  }

  .hero-amaterasu-game .content-wrapper {
    position: relative;
    z-index: 2;
    max-width: 900px;
    padding: 20px;
    background-color: rgba(0, 0, 0, {{ section.settings.content_overlay_opacity | divided_by: 100.0 }}); /* Fundo para o texto */
    border-radius: 8px;
  }

  .hero-amaterasu-game h2 {
    font-size: 3.5em;
    margin-bottom: 20px;
    line-height: 1.1;
    color: {{ section.settings.heading_color }};
  }

  .hero-amaterasu-game p {
    font-size: 1.3em;
    line-height: 1.5;
    margin-bottom: 30px;
    color: {{ section.settings.text_color }};
  }

  .hero-amaterasu-game .hero-cta-button {
    display: inline-block;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    padding: 15px 35px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    font-size: 1.2em;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .hero-amaterasu-game .hero-cta-button:hover {
    background-color: {{ section.settings.button_hover_color }};
    transform: translateY(-2px);
  }

  /* Responsividade */
  @media (max-width: 990px) {
    .hero-amaterasu-game h2 {
      font-size: 2.8em;
    }
    .hero-amaterasu-game p {
      font-size: 1.1em;
    }
  }

  @media (max-width: 768px) {
    .hero-amaterasu-game {
      min-height: 350px;
    }
    .hero-amaterasu-game h2 {
      font-size: 2.2em;
    }
    .hero-amaterasu-game p {
      font-size: 1em;
    }
    .hero-amaterasu-game .hero-cta-button {
      padding: 12px 25px;
      font-size: 1em;
    }
    .hero-amaterasu-game .content-wrapper {
        padding: 15px;
    }
  }

  @media (max-width: 480px) {
    .hero-amaterasu-game {
      min-height: 300px;
      padding-left: 15px;
      padding-right: 15px;
    }
    .hero-amaterasu-game h2 {
      font-size: 1.8em;
    }
  }
{%- endstyle -%}

<section class="hero-amaterasu-game">
  <div class="content-wrapper">
    {%- if section.settings.heading != blank -%}
      <h2>{{ section.settings.heading | escape }}</h2>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <p>{{ section.settings.subheading | escape }}</p>
    {%- endif -%}
    {%- if section.settings.show_cta and section.settings.cta_link != blank -%}
      <a href="{{ section.settings.cta_link }}" class="hero-cta-button">
        {{ section.settings.cta_text | escape }}
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Hero - Amaterasu Game",
  "tag": "section",
  "class": "section-hero-amaterasu-game",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagem de Fundo",
      "info": "Imagem principal para a seção de hero."
