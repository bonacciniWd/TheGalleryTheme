    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Mostrar botão CTA",
      "default": true
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Link do botão CTA",
      "default": "/"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Texto do botão CTA",
      "default": "Jogue Agora!"
    },
    {
      "type": "header",
      "content": "Cores"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Cor do Texto",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Cor do Título",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Cor de Fundo do Botão",
      "default": "#ff8800"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Cor do Texto do Botão",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Cor do Botão (Hover)",
      "default": "#e65100"
    },
    {
      "type": "header",
      "content": "Espaçamento e Altura"
    },
    {
      "type": "range",
      "id": "section_min_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Altura Mínima da Seção",
      "default": 500
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Espaçamento superior (interno)",
      "default": 60
    },
