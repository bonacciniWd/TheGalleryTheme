        { "value": "top center", "label": "Topo Centro" },
        { "value": "center center", "label": "Centro" },
        { "value": "bottom center", "label": "Fundo Centro" }
      ],
      "default": "center center"
    },
    {
      "type": "range",
      "id": "overlay_brightness",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Brilho da Imagem de Fundo",
      "default": 60,
      "info": "Ajuste o brilho da imagem para melhorar a legibilidade do texto (0% = totalmente escuro, 100% = original)."
    },
    {
      "type": "range",
      "id": "content_overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Opacidade do Fundo do Texto",
      "default": 30,
      "info": "Adiciona um fundo semitransparente ao redor do texto para melhor contraste (0% = transparente, 100% = opaco)."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título Principal",
      "default": "Desafie-se no Amaterasu Game!"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo/Descrição",
