{{ 'section-loyalty-points-info.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .loyalty-points-section {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .loyalty-points-section {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .loyalty-points-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
  }

  .loyalty-points-header h2 {
    font-size: 2.5em;
    margin-bottom: 15px;
    color: {{ section.settings.heading_color }};
  }

  .loyalty-points-header p {
    font-size: 1.1em;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto 40px;
    opacity: 0.8;
  }

  .loyalty-points-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .loyalty-points-item {
    background-color: {{ section.settings.card_background_color }};
    color: {{ section.settings.card_text_color }};
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .loyalty-points-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
  }

  .loyalty-points-item .icon-wrapper {
    width: 60px;
    height: 60px;
    background-color: {{ section.settings.icon_background_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    flex-shrink: 0;
  }

  .loyalty-points-item .icon-wrapper svg {
    width: 30px;
    height: 30px;
    fill: {{ section.settings.icon_color }};
  }

  .loyalty-points-item h3 {
    font-size: 1.5em;
    margin-bottom: 15px;
    color: {{ section.settings.card_heading_color }};
  }

  .loyalty-points-item p {
    font-size: 1em;
    line-height: 1.5;
    opacity: 0.9;
  }

  .loyalty-points-cta-wrapper {
    margin-top: 60px;
    text-align: center;
  }

  .loyalty-points-cta-button {
    display: inline-block;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    padding: 15px 30px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    font-size: 1.1em;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: none; /* Remover borda padrão do botão */
    cursor: pointer;
  }

  .loyalty-points-cta-button:hover {
    background-color: {{ section.settings.button_hover_color }};
    transform: translateY(-2px);
  }

  /* Responsividade */
  @media (max-width: 768px) {
    .loyalty-points-header h2 {
      font-size: 2em;
    }
    .loyalty-points-header p {
      font-size: 1em;
    }
    .loyalty-points-grid {
      grid-template-columns: 1fr;
    }
    .loyalty-points-item {
      padding: 25px;
    }
    .loyalty-points-item h3 {
      font-size: 1.3em;
    }
    .loyalty-points-cta-button {
      font-size: 1em;
      padding: 12px 25px;
    }
  }

  @media (max-width: 480px) {
    .loyalty-points-section {
      padding: 40px 15px;
    }
    .loyalty-points-container {
      padding: 0 15px;
    }
  }
{%- endstyle -%}

<section class="loyalty-points-section section-{{ section.id }}-padding">
  <div class="loyalty-points-container">
    <div class="loyalty-points-header">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>

    <div class="loyalty-points-grid">
      {% for block in section.blocks %}
        <div class="loyalty-points-item">
          <div class="icon-wrapper">
            {% comment %} SVG Icons {% endcomment %}
            {% case block.settings.icon_type %}
              {% when 'star' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 2L9.19 8.63L2 9.24L7.55 13.97L5.82 21L12 17.27L18.18 21L16.45 13.97L22 9.24L14.81 8.63L12 2Z"/></svg>
              {% when 'coin' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17.93c-2.5-1.41-4-4.71-4-7.93h2c0 2.21 1.49 4.86 4 6.96v.97zM15 12h2c0-2.21-1.49-4.86-4-6.96v-.97C17.52 4.07 19 6.77 19 10c0 3.22-1.5 6.52-4 7.93v-5.93zm-5 0v-2c0-2.21 1.49-4.86 4-6.96v-.97C6.48 4.07 5 6.77 5 10c0 3.22 1.5 6.52 4 7.93v-5.93zM12 4.07V3c2.5 1.41 4 4.71 4 7.93h-2c0-2.21-1.49-4.86-4-6.96z"/></svg>
              {% when 'gift' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 3a9 9 0 0 0-9 9c0 1.63.38 3.19 1.05 4.59L3 21l4.41-1.05C8.81 20.62 10.37 21 12 21c4.97 0 9-4.03 9-9s-4.03-9-9-9zm-1 16H8.86l-.76-.76c-.66-.66-1.12-1.46-1.39-2.31L7.5 14H11v5zM12 17.27c-1.63 0-3.19-.38-4.59-1.05L4.59 19 3 14.41l1.05-4.41C4.38 8.81 3.5 7.37 3.5 6c0-2.42 1.72-4.44 4-4.87v2.87c-1.38.46-2 1.84-2 3.13 0 1.35.65 2.5 1.76 3.19L12 11.5l.76-.76c.66-.66 1.12-1.46 1.39-2.31l-.75-.75c-1.38-.46-2-1.84-2-3.13 0-1.35.65-2.5 1.76-3.19L12 2.73c2.28.43 4 2.45 4 4.87 0 1.37-.88 2.65-2 3.42L12 11.5z"/></svg>
              {% when 'percent' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M19 19.5c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5-1.5.67-1.5 1.5.67 1.5 1.5 1.5zM6 10.5c.83 0 1.5-.67 1.5-1.5S6.83 7.5 6 7.5 4.5 8.17 4.5 9s.67 1.5 1.5 1.5zm-3 7l8.5-8.5 6 6L21 9V3h-6L9 11.5 3 5z"/></svg>
              {% when 'ticket' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M4 11V8h4V4H6c-1.1 0-2 .9-2 2v5zm16 0V6c0-1.1-.9-2-2-2h-2v4h4zM4 13v5c0 1.1.9 2 2 2h2v-4H4zm16 0v4h-4v4h2c1.1 0 2-.9 2-2v-5zM12 4c-1.1 0-2 .9-2 2v2H8c-.55 0-1 .45-1 1s.45 1 1 1h2v2H7c-.55 0-1 .45-1 1s.45 1 1 1h3v2H8c-.55 0-1 .45-1 1s.45 1 1 1h2v2c0 1.1.9 2 2 2s2-.9 2-2v-2h2c.55 0 1-.45 1-1s-.45-1-1-1h-2v-2h3c.55 0 1-.45 1-1s-.45-1-1-1h-3v-2h2c.55 0 1-.45 1-1s-.45-1-1-1h-2V6c0-1.1-.9-2-2-2z"/></svg>
              {% when 'custom_image' %}
                {% if block.settings.custom_icon_image != blank %}
                  <img src="{{ block.settings.custom_icon_image | image_url: width: 60 }}" alt="{{ block.settings.item_heading }}" style="width: 60px; height: 60px; object-fit: contain;">
                {% else %}
                  {# Fallback to info icon if custom image is selected but not set #}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/></svg>
                {% endif %}
              {% else %} {# Default or 'info' icon #}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/></svg>
            {% endcase %}
          </div>
          <h3>{{ block.settings.item_heading }}</h3>
          <p>{{ block.settings.item_text }}</p>
        </div>
      {% endfor %}
    </div>

    {%- if section.settings.show_cta -%}
      <div class="loyalty-points-cta-wrapper">
        <a href="{{ section.settings.cta_link }}" class="loyalty-points-cta-button">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
