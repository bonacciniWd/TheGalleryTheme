{% schema %}
{
  "name": "Parallax Avançado",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagem de Fundo"
    },
    {
      "type": "image_picker",
      "id": "foreground_image",
      "label": "Imagem de Primeiro Plano"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Seu Título Aqui"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Altura da Seção (vh)",
      "min": 50,
      "max": 150,
      "step": 10,
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Parallax Avançado",
      "category": "Banner"
    }
  ]
}
{% endschema %}

<section 
  class="parallax-advanced" 
  style="height: {{ section.settings.height }}vh;">

  <div class="parallax-layer parallax-bg" 
       style="background-image: url({{ section.settings.background_image | img_url: '2048x' }});">
  </div>

  <div class="parallax-layer parallax-fg">
    <img src="{{ section.settings.foreground_image | img_url: '800x' }}" alt="Primeiro Plano">
  </div>

  <div class="parallax-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
  </div>
</section>
