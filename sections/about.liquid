<style>
  .amaterasu-section {
    font-family: sans-serif;
    padding: 40px 20px;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .amaterasu-section h2 {
    font-size: 2.5em;
    margin-bottom: 20px;
    color: {{ section.settings.heading_color }};
    {% if section.settings.heading_bold %}
      font-weight: bold;
    {% endif %}
  }

  .amaterasu-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 30px;
    margin-top: 30px;
  }

  .amaterasu-item {
    flex: 1;
    min-width: 280px;
    max-width: 350px;
    background-color: #fff;
    padding: 25px;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: left; /* Alinha o texto √† esquerda dentro do bloco */
  }

  .amaterasu-item .icon {
    font-size: 4em;
    margin-bottom: 5px;
    color: {{ section.settings.icon_color }};
  }

  .amaterasu-item h3 {
    margin-bottom: 0px;
    color: {{ section.settings.heading_color }}; /* Usando a mesma cor do t√≠tulo principal */
  }

  .amaterasu-item p {
    font-size: 1.1em;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin-bottom: 15px; /* Espa√ßo entre o texto e a imagem */
  }

  .amaterasu-item .item-image {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    display: block; /* Garante que a imagem se comporte como um bloco */
    margin-top: 15px; /* Espa√ßo acima da imagem se for abaixo do texto */
  }

  @media (max-width: 768px) {
    .amaterasu-section h2 {
      font-size: 2em;
    }

    .amaterasu-item {
      padding: 20px;
    }
  }
</style>

<div class="amaterasu-section">
  <h2>{{ section.settings.heading_text }}</h2>

  <div class="amaterasu-content">
    {% for block in section.blocks %}
      <div class="amaterasu-item">
        <span class="icon">{{ block.settings.icon_character }}</span>
        <h3>{{ block.settings.item_title }}</h3>
        <p>{{ block.settings.item_description }}</p>
        {% if block.settings.item_image != blank %}
          <img src="{{ block.settings.item_image | img_url: 'master' }}"
               alt="{{ block.settings.item_title }}"
               class="item-image"
               loading="lazy">
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

