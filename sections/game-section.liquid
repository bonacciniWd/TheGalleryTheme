{% schema %}
{
  "name": "Stick Hero Game",
  "presets": [
    {
      "name": "Stick Hero Game",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="game-container">
  <div id="score"></div>
  <canvas id="game" width="375" height="375"></canvas>
  <div id="introduction">Hold down the mouse to stretch out a stick</div>
  <div id="perfect">DOUBLE SCORE</div>
  <button id="restart">RESTART</button>

  <a id="youtube" href="https://youtu.be/eue3UdFvwPo" target="_blank" rel="noopener">
    <span>See how this game was made</span>
  </a>
  <div id="youtube-card">How to create a Stick Hero game with JavaScript and HTML Canvas</div>
</div>

<style>
    html,
    body {
      height: 100%;
      margin: 0;
      overflow: hidden;
    }

    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      cursor: pointer;
    }

   .game-container {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    isolation: isolate; /* Novidade */
  }

  canvas#game {
    display: block;
    width: 100% !important;
    height: auto !important;
    max-width: 375px;
    margin: 0 auto;
  }

    #score {
      position: fixed;
      top: 30px;
      right: 30px;
      font-size: 2em;
      font-weight: 900;
      z-index: 1000;
      color: #333;
    }

    #introduction {
      position: relative;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-weight: 600;
      font-size: 1.2em;
      text-align: center;
      transition: opacity 2s;
      z-index: 1000;
      background: rgba(255, 255, 255, 0.9);
      padding: 20px;
      border-radius: 10px;
    }

    #restart {
      position: fixed;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      width: 120px;
      height: 120px;
      border-radius: 50%;
      color: white;
      background-color: #ff4444;
      border: none;
      font-weight: 700;
      font-size: 1.2em;
      cursor: pointer;
      z-index: 1000;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
      display: none;
      transition: all 0.3s;
    }

    #restart:hover {
      background-color: #ff0000;
      transform: translate(-50%, -50%) scale(1.1);
    }

    #perfect {
      position: fixed;
      top: 20%;
      left: 50%;
      transform: translateX(-50%);
      font-size: 2em;
      font-weight: 900;
      color: #4CAF50;
      opacity: 0;
      transition: opacity 2s;
      z-index: 1000;
    }

    /* Restante do CSS original */
    #youtube,
    #youtube-card {
      display: none;
    }

    @media (min-height: 425px) {
      #youtube {
        z-index: 2;
        display: block;
        width: 100px;
        height: 70px;
        position: fixed;
        bottom: 20px;
        left: 20px;
        background: red;
        border-radius: 50% / 11%;
        transform: scale(0.8);
        transition: transform 0.5s;
      }

      #youtube:hover {
        transform: scale(0.9);
      }

      #youtube::before {
        content: "";
        display: block;
        position: absolute;
        top: 7.5%;
        left: -6%;
        width: 112%;
        height: 85%;
        background: red;
        border-radius: 9% / 50%;
      }

      #youtube::after {
        content: "";
        display: block;
        position: absolute;
        top: 20px;
        left: 40px;
        width: 45px;
        height: 30px;
        border: 15px solid transparent;
        box-sizing: border-box;
        border-left: 30px solid white;
      }

      #youtube:hover + #youtube-card {
        display: block;
        position: fixed;
        bottom: 12px;
        left: 10px;
        padding: 25px 25px 25px 130px;
        width: 300px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
      }
    }
</style>

<script src="{{ 'game.js' | asset_url }}" defer></script>
