{% schema %}
{
  "name": "Stick Hero Game",
  "presets": [
    {
      "name": "Stick Hero Game",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="game-container">
  <div id="score">0</div>
  <canvas id="game"></canvas>
  <div id="introduction">Hold down to stretch the stick</div>
  <div id="perfect">DOUBLE SCORE</div>
  <button id="restart">RESTART</button>

  <a id="youtube" href="https://youtu.be/eue3UdFvwPo" target="_blank" rel="noopener">
    <span>How it was made</span>
  </a>
</div>

<style>
  :root {
    --game-width: min(100vw, 400px);
    --game-height: min(100vh, 600px);
  }

  .game-container {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    background: #f0f0f0;
  }

  #game {
    width: var(--game-width) !important;
    height: var(--game-height) !important;
    display: block;
    margin: 0 auto;
    touch-action: none;
  }

  #score {
    position: fixed;
    top: 20px;
    right: 20px;
    font-size: 2em;
    font-weight: 900;
    color: #333;
    z-index: 1000;
  }

  #restart {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: #ff4444;
    color: white;
    border: none;
    font-weight: bold;
    cursor: pointer;
    z-index: 1000;
    display: none;
    transition: transform 0.3s;
  }

  #restart:hover {
    transform: translate(-50%, -50%) scale(1.1);
  }

  /* Outros estilos mantidos */
</style>

<script src="{{ 'game.js' | asset_url }}" defer></script>
