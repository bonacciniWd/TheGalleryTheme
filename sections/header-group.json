ial-gradient(circle, rgba(255, 255, 255, 0.2) 10%, rgba(0, 0, 0, 0) 80%);\n    filter: blur(20px);\n    opacity: 0.4;\n    pointer-events: none;\n  }\n\n  .blur-layer1 {\n    animation: blurMove1 15s linear infinite alternate;\n  }\n\n  .blur-layer2 {\n    animation: blurMove2 25s linear infinite alternate-reverse;\n    opacity: 0.3;\n  }\n\n  @keyframes blurMove1 {\n    from {\n      transform: translateX(-10%) translateY(-5%);\n    }\n    to {\n      transform: translateX(10%) translateY(5%);\n    }\n  }\n\n  @keyframes blurMove2 {\n    from {\n      transform: translateX(5%) translateY(10%);\n    }\n    to {\n      transform: translateX(-5%) translateY(-10%);\n    }\n  }\n\n  .lambe-title {\n    font-size: 24px;\n    font-weight: bold;\n    margin-bottom: 30px;\n    color: #fff;\n    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);\n  }\n\n  .lambe-scroll-container {\n    width: 100%;\n    overflow: hidden;\n    position: relative;\n    white-space: nowrap;\n    padding: 20px 0;\n  }\n\n  .lambe-scroll {\n    display: flex;\n    gap: 40px;\n    animation: scrollProducts 25s linear infinite;\n    width: max-content;\n  }\n\n  .lambe-item {\n    flex: 0 0 auto;\n    width: 200px;\n  }\n\n  .lambe-image {\n    width: 100%;\n    height: auto;\n    border-radius: 10px;\n    \n    transition: transform 0.3s ease-in-out;\n  }\n\n  .lambe-image:hover {\n    transform: scale(1.05);\n  }\n\n  @keyframes scrollProducts {\n    from {\n      transform: translateX(0);\n    }\n    to {\n      transform: translateX(-50%);\n    }\n  }\n\n .lambe-button {\n    display: inline-block;\n    color: #fff; /* Texto branco */\n    padding: 10px 25px;\n    font-size: 16px;\n    font-weight: bolder;\n    text-decoration: underline;\n    text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.8); /* Sombra preta no texto */\n    transition: text-shadow 0.3s ease-in-out;\n    background: none; /* Sem fundo */\n    border: none;\n    margin-top: 30px;\n}\n\n.lambe-button:hover {\n    text-shadow: 5px 5px 10px r