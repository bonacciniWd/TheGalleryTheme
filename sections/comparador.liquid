{% schema %}
{
  "name": "Image Comparator",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_a",
      "label": "Imagem A"
    },
    {
      "type": "text",
      "id": "text_a",
      "label": "Texto da Imagem A",
      "default": "Modelo A"
    },
    {
      "type": "image_picker",
      "id": "image_b",
      "label": "Imagem B"
    },
    {
      "type": "text",
      "id": "text_b",
      "label": "Texto da Imagem B",
      "default": "Modelo B"
    }
  ],
  "presets": [
    {
      "name": "Comparador de Imagens"
    }
  ]
}
{% endschema %}

<div class="image-comparator" data-id="{{ section.id }}">
  <div class="image-comparator__wrapper">
    {% if section.settings.image_a %}
      <img src="{{ section.settings.image_a | image_url: width: 1200 }}" alt="{{ section.settings.text_a }}" class="image-comparator__image">
    {% endif %}
    
    <div class="image-comparator__overlay">
      {% if section.settings.image_b %}
        <img src="{{ section.settings.image_b | image_url: width: 1200 }}" alt="{{ section.settings.text_b }}" class="image-comparator__image">
      {% endif %}
    </div>

    <input type="range" min="0" max="100" value="50" class="image-comparator__slider" aria-label="Comparar modelos" title="Arraste para comparar os modelos">
    
    <button type="button" class="image-comparator__reset" aria-label="Resetar comparação">Reset</button>
  </div>

  <div class="image-comparator__labels">
    <span>{{ section.settings.text_a }}</span>
    <span>{{ section.settings.text_b }}</span>
  </div>
</div>

<style>
.image-comparator {
  max-width: 800px;
  margin: 20px auto;
  font-family: Arial, sans-serif;
}

.image-comparator__wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
  border-radius: 12px;
  box-shadow: 0 0 15px rgba(0,0,0,0.1);
}

.image-comparator__image {
  width: 100%;
  display: block;
}

.image-comparator__overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  overflow: hidden;
  width: 50%;
  transition: width 0.3s ease;
}

.image-comparator__slider {
  width: 100%;
  margin-top: 15px;
  appearance: none;
  height: 6px;
  background: #ddd;
  border-radius: 3px;
  cursor: pointer;
}

.image-comparator__slider::-webkit-slider-thumb {
  appearance: none;
  width: 20px;
  height: 20px;
  background: #007aff;
  border-radius: 50%;
  border: none;
  box-shadow: 0 0 5px rgba(0,0,0,0.2);
}

.image-comparator__labels {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
  font-size: 14px;
  color: #555;
}

.image-comparator__reset {
  position: absolute;
  bottom: 10px;
  right: 10px;
  background: #007aff;
  color: #fff;
  border: none;
  padding: 6px 12px;
  border-radius: 5px;
  cursor: pointer;
  font-size: 12px;
  transition: background 0.3s ease;
}

.image-comparator__reset:hover {
  background: #005bb5;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.image-comparator').forEach(function(comparator) {
    const slider = comparator.querySelector('.image-comparator__slider');
    const overlay = comparator.querySelector('.image-comparator__overlay');
    const resetBtn = comparator.querySelector('.image-comparator__reset');

    function updateOverlay() {
      overlay.style.width = slider.value + '%';
    }

    slider.addEventListener('input', updateOverlay);

    resetBtn.addEventListener('click', function() {
      slider.value = 50;
      updateOverlay();
    });
  });
});
</script>
