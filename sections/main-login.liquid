{%- style -%}
.login-page-background {
  background: url('{{ 'amaterasuu.jpg' | asset_url }}') no-repeat center center fixed;
  background-size: cover;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
}

.login-form-container {
  background: rgba(255, 255, 255, 0.9);
  padding: 2.5rem;
  border-radius: 16px;
  max-width: 420px;
  width: 100%;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
  text-align: center;
}

.login-form-container h1 {
  color: #111;
  font-size: 2rem;
  margin-bottom: 1.5rem;
}

.login-form-container form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.login-form-container input {
  padding: 12px;
  font-size: 1rem;
  border-radius: 8px;
  border: 1px solid #ccc;
  transition: border-color 0.3s ease;
}

.login-form-container input:focus {
  border-color: #ff5a00;
  outline: none;
}

.login-form-container button {
  padding: 12px;
  border: none;
  border-radius: 8px;
  color: white;
  font-weight: bold;
  font-size: 1rem;
  margin-top: 0.5rem;
  cursor: pointer;
  background: radial-gradient(49% 81% at 45% 47%, #FFE20345 0%, #073AFF00 100%),
              radial-gradient(113% 91% at 17% -2%, #FF5A00FF 1%, #FF000000 99%),
              radial-gradient(142% 91% at 83% 7%, #FFDB00FF 1%, #FF000000 99%),
              radial-gradient(142% 91% at -6% 74%, #FF0049FF 1%, #FF000000 99%),
              radial-gradient(142% 91% at 111% 84%, #FF7000FF 0%, #FF0000FF 100%);
  transition: transform 0.2s, box-shadow 0.2s;
}

.login-form-container button:hover {
  transform: scale(1.03);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
}

.forgot-password,
.create-account {
  display: block;
  margin-top: 1rem;
  font-size: 0.9rem;
  color: #333;
  text-decoration: none;
}

.forgot-password:hover,
.create-account:hover {
  text-decoration: underline;
}

@media screen and (max-width: 480px) {
  .login-form-container {
    padding: 2rem;
  }

  .login-form-container h1 {
    font-size: 1.5rem;
  }
}
{%- endstyle -%}

<div class="login-page-background">
  <div class="login-form-container">
    <h1>Fazer login</h1>
    <form method="post" action="/account/login">
      <input type="email" name="customer[email]" placeholder="E-mail" required />
      <input type="password" name="customer[password]" placeholder="Senha" required />
      <a class="forgot-password" href="/account/recover">Esqueceu a senha?</a>
      <button type="submit">Fazer login</button>
    </form>
    <a class="create-account" href="/account/register">Criar conta</a>
  </div>
</div>
