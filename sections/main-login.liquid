{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  /* Mantendo o CSS da seção original para padding, mas aplicado ao container do formulário */
  .login-form-wrapper-with-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .login-form-wrapper-with-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Seus novos estilos customizados */
  .login-page-background {
    background: url('{{ 'amaterasuu.jpg' | asset_url }}') no-repeat center center fixed;
    background-size: cover;
    min-height: 100vh; /* Garante que o fundo ocupe a altura total da viewport */
    width: 100vw; /* Garante que o fundo ocupe a largura total da viewport */
    position: fixed; /* Fixa o fundo na viewport */
    top: 0;
    left: 0;
    z-index: -1; /* Garante que o background fique atrás do conteúdo */
  }

  /* Novo estilo para o container que vai centralizar o formulário */
  .login-content-centered {
    min-height: 100vh; /* Permite que o conteúdo seja centralizado verticalmente */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem; /* Um padding geral para garantir que o formulário não cole nas bordas em telas pequenas */
    position: relative; /* Para que o z-index funcione e o conteúdo fique acima do background */
    z-index: 1;
  }

  .login-form-container {
    background: rgba(255, 255, 255, 0.9);
    padding: 2.5rem;
    border-radius: 16px;
    max-width: 420px;
    width: 100%;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
    text-align: center;
  }

  .login-form-container h1 {
    color: #111;
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .login-form-container form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .login-form-container input {
    padding: 12px;
    font-size: 1rem;
    border-radius: 8px;
    border: 1px solid #ccc;
    transition: border-color 0.3s ease;
  }

  .login-form-container input:focus {
    border-color: #ff5a00;
    outline: none;
  }

  .login-form-container button {
    padding: 12px;
    border: none;
    border-radius: 8px;
    color: white;
    font-weight: bold;
    font-size: 1rem;
    margin-top: 0.5rem;
    cursor: pointer;
    background: radial-gradient(49% 81% at 45% 47%, #FFE20345 0%, #073AFF00 100%),
                radial-gradient(113% 91% at 17% -2%, #FF5A00FF 1%, #FF000000 99%),
                radial-gradient(142% 91% at 83% 7%, #FFDB00FF 1%, #FF000000 99%),
                radial-gradient(142% 91% at -6% 74%, #FF0049FF 1%, #FF000000 99%),
                radial-gradient(142% 91% at 111% 84%, #FF7000FF 0%, #FF0000FF 100%);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .login-form-container button:hover {
    transform: scale(1.03);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
  }

  .forgot-password,
  .create-account {
    display: block;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: #333;
    text-decoration: none;
  }

  .forgot-password:hover,
  .create-account:hover {
    text-decoration: underline;
  }

  @media screen and (max-width: 480px) {
    .login-form-container {
      padding: 2rem;
    }

    .login-form-container h1 {
      font-size: 1.5rem;
    }
  }
{%- endstyle -%}

{%- if section.settings.enable_shop_login_button == false -%}
  {%- assign hide_shop_login_button = true -%}
{%- endif -%}

<div class="login-page-background"></div> {# Este div agora é o fundo em tela cheia #}

<div class="customer login login-content-centered"> {# Este div centraliza o conteúdo sobre o fundo #}
  <div class="login-form-wrapper-with-padding"> {# Novo div para aplicar o padding da seção #}
    <div class="login-form-container"> {# Container branco do formulário #}

      {# Bloco de recuperação de senha #}
      <h1 id="recover" tabindex="-1">
        {{ 'customer.recover_password.title' | t }}
      </h1>
      <div>
        <p>
          {{ 'customer.recover_password.subtext' | t }}
        </p>

        {%- form 'recover_customer_password' -%}
          {% assign recover_success = form.posted_successfully? %}
          <div class="field">
            <input
              type="email"
              value=""
              name="email"
              id="RecoverEmail"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                aria-invalid="true"
                aria-describedby="RecoverEmail-email-error"
                autofocus
              {% endif %}
              placeholder="{{ 'customer.login_page.email' | t }}"
            >
            <label for="RecoverEmail">
              {{ 'customer.login_page.email' | t }}
            </label>
          </div>
          {%- if form.errors -%}
            <small id="RecoverEmail-email-error" class="form__message">
              <span class="svg-wrapper">
                {{- 'icon-error.svg' | inline_asset_content -}}
              </span>
              {{ form.errors.messages.form }}
            </small>
          {%- endif -%}

          <button>
            {{ 'customer.login_page.submit' | t }}
          </button>

          <a href="#login" class="forgot-password">
            {{ 'customer.login_page.cancel' | t }}
          </a>
        {%- endform -%}
      </div>

      {# Bloco de login #}
      <h1 id="login" tabindex="-1">
        {{ 'customer.login_page.title' | t }}
      </h1>
      <div>
        {%- if recover_success == true -%}
          <h3 class="form__message" tabindex="-1" autofocus>
            <span class="svg-wrapper">
              {{- 'icon-success.svg' | inline_asset_content -}}
            </span>
            {{ 'customer.recover_password.success' | t }}
          </h3>
        {%- endif -%}
        {%- form 'customer_login', novalidate: 'novalidate' -%}
          {%- if form.errors -%}
            <h2 class="form__message" tabindex="-1" autofocus>
              <span class="visually-hidden">{{ 'accessibility.error' | t }} </span>
              <span class="svg-wrapper">
                {{- 'icon-error.svg' | inline_asset_content -}}
              </span>
              {{ 'templates.contact.form.error_heading' | t }}
            </h2>
            {{ form.errors | default_errors }}
          {%- endif -%}

          {%- if shop.features.login_with_shop_classic_customer_accounts? -%}
            <section name="sign-in-with-shop-provider">
              {{ shop | login_button: hide_button: hide_shop_login_button }}

              {%- unless hide_shop_login_button -%}
                <p>
                  {{ 'customer.login_page.alternate_provider_separator' | t }}
                </p>
              {%- endunless -%}
            </section>
          {%- endif -%}

          <div class="field">
            <input
              type="email"
              name="customer[email]"
              id="CustomerEmail"
              autocomplete="email"
              autocorrect="off"
              autocapitalize="off"
              {% if form.errors contains 'form' %}
                aria-invalid="true"
              {% endif %}
              placeholder="{{ 'customer.login_page.email' | t }}"
            >
            <label for="CustomerEmail">
              {{ 'customer.login_page.email' | t }}
            </label>
          </div>

          {%- if form.password_needed -%}
            <div class="field">
              <input
                type="password"
                value=""
                name="customer[password]"
                id="CustomerPassword"
                autocomplete="current-password"
                {% if form.errors contains 'form' %}
                  aria-invalid="true"
                {% endif %}
                placeholder="{{ 'customer.login_page.password' | t }}"
              >
              <label for="CustomerPassword">
                {{ 'customer.login_page.password' | t }}
              </label>
            </div>

            <a href="#recover" class="forgot-password">
              {{ 'customer.login_page.forgot_password' | t }}
            </a>
          {%- endif -%}

          <button>
            {{ 'customer.login_page.sign_in' | t }}
          </button>

          <a href="{{ routes.account_register_url }}" class="create-account">
            {{ 'customer.login_page.create_account' | t }}
          </a>
        {%- endform -%}
      </div>

      {# Bloco de login de convidado #}
      {%- if shop.checkout.guest_login -%}
        <div>
          <hr>
          <h2>{{ 'customer.login_page.guest_title' | t }}</h2>

          {%- form 'guest_login' -%}
            <button>
              {{ 'customer.login_page.guest_continue' | t }}
            </button>
          {%- endform -%}
        </div>
      {%- endif -%}
    </div> {# Fim do login-form-container #}
  </div> {# Fim do login-form-wrapper-with-padding #}
</div> {# Fim do login-content-centered #}


{% schema %}
{
  "name": "t:sections.main-login.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_shop_login_button",
      "label": "t:sections.main-login.shop_login_button.enable",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}