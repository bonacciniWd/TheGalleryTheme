<details id="Details-menu-drawer-container" class="menu-drawer-container">
  <summary class="header__icon header__icon--menu header__icon--summary focus-inset" aria-label="{{ 'sections.header.menu' | t }}">
    <span>
      {{ 'icon-hamburger.svg' | inline_asset_content }}
      {{ 'sections.header.menu' | t }}
    </span>
  </summary>
  <div id="menu-drawer" class="menu-drawer motion-reduce" tabindex="-1">
    <div class="menu-drawer__inner-container">
      <div class="menu-drawer__navigation-container">
        <nav class="menu-drawer__navigation">
          <ul class="menu-drawer__menu list-menu" role="list">

            {% assign excluded_titles = 'Início, Entrar em contato, Todos os produtos, Quem somos' | split: ', ' %}
            {% assign other_links_for_accordion = '' | split: ',' %} {# Inicializa uma array vazia #}

            {# Primeiro, itere para separar os links #}
            {%- for link in section.settings.menu.links -%}
              {%- assign link_title = link.title | strip -%}
              {%- if excluded_titles contains link_title -%}
                {# Links diretos #}
                <li class="menu-drawer__menu-item">
                  <a
                    id="menu-drawer-link-{{ link.handle }}"
                    href="{{ link.url }}"
                    class="menu-drawer__menu-link link link--text list-menu__item"
                    {% if link.current %}
                      aria-current="page"
                    {% endif %}
                  >
                    {{ link.title | escape }}
                  </a>
                </li>
              {%- else -%}
                {# Colete os links que irão para o accordion #}
                {% capture link_html %}
                  <li>
                    {%- if link.links == blank -%}
                      <a
                        id="menu-drawer-accordion-link-{{ link.handle }}"
                        href="{{ link.url }}"
                        class="menu-drawer__menu-link link link--text list-menu__item"
                        {% if link.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        {{ link.title | escape }}
                      </a>
                    {%- else -%}
                      {# Se o link dentro do accordion tem sub-links, ele se torna um sub-accordion #}
                      <details id="Details-menu-drawer-submenu-accordion-{{ link.handle }}">
                        <summary
                          id="HeaderDrawerMenu-Accordion-{{ link.handle }}"
                          class="menu-drawer__menu-link link link--text list-menu__item"
                        >
                          {{ link.title | escape }}
                          {% render 'icon-arrow' %}
                        </summary>
                        <div
                          id="menu-drawer-submenu-content-accordion-{{ link.handle }}"
                          class="menu-drawer__submenu has-submenu motion-reduce"
                          tabindex="-1"
                        >
                          <div class="menu-drawer__submenu-inner">
                            <a href="{{ link.url }}" class="menu-drawer__back-link link link--text list-menu__item">
                              {% render 'icon-arrow' %}
                              {{ link.title | escape }}
                            </a>
                            <ul class="menu-drawer__menu list-menu" role="list">
                              {%- for childlink in link.links -%}
                                <li>
                                  <a
                                    id="menu-drawer-accordion-childlink-{{ link.handle }}-{{ childlink.handle }}"
                                    href="{{ childlink.url }}"
                                    class="menu-drawer__menu-link link link--text list-menu__item"
                                    {% if childlink.current %}
                                      aria-current="page"
                                    {% endif %}
                                  >
                                    {{ childlink.title | escape }}
                                  </a>
                                </li>
                              {%- endfor -%}
                            </ul>
                          </div>
                        </div>
                      </details>
                    {%- endif -%}
                  </li>
                {% endcapture %}
                {% assign other_links_for_accordion = other_links_for_accordion | push: link_html %}
              {%- endif -%}
            {%- endfor -%}

            {# Renderize o accordion 'Categorias' se houver links não excluídos #}
            {%- if other_links_for_accordion.size > 0 -%}
              <li class="menu-drawer__menu-item">
                <details id="Details-menu-drawer-accordion-categories">
                  <summary
                    id="HeaderDrawerMenu-Accordion-Categories"
                    class="menu-drawer__menu-link link link--text list-menu__item"
                  >
                    <span>Categorias</span> {# Título do seu accordion #}
                    {% render 'icon-arrow' %}
                  </summary>
                  <div
                    id="menu-drawer-submenu-categories"
                    class="menu-drawer__submenu has-submenu motion-reduce"
                    tabindex="-1"
                  >
                    <div class="menu-drawer__submenu-inner">
                      {# Voltar para o nível anterior (opcional, dependendo do design do tema) #}
                      <a href="#menu-drawer-accordion-categories" class="menu-drawer__back-link link link--text list-menu__item">
                        {% render 'icon-arrow' %}
                        Categorias
                      </a>
                      <ul class="menu-drawer__menu list-menu" role="list">
                        {%- for link_html in other_links_for_accordion -%}
                          {{ link_html }}
                        {%- endfor -%}
                      </ul>
                    </div>
                  </div>
                </details>
              </li>
            {%- endif -%}

          </ul>
        </nav>
        </div>
    </div>
  </div>
</details>