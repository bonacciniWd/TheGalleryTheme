<style>
    :root {
        --frete-buscar-localizacao:rgb(0, 173, 66);
        --frete-buscar-precos:rgb(0, 173, 37);
        --frete-buscar-fonte: white;
        --frete-buscar-btn: black;
    }
    .calculo-frete {
        padding: 10px;
        border: 1px solidrgb(0, 0, 0);
        border-radius: 8px;
        background: rgb(255 255 255);
        box-shadow: 0px 5px 6px -9px #454545;
        border: solid 1px #bdbdbd;
    }
    .frete-form {
        display: flex;
        flex-direction: row;
        width: 100%;
        justify-content: center;
    }
    input#campo-cep {
        padding: 8px;
        width: 80%;
        margin-right: 10px;
        color: rgb(128 128 128);
        background-color: #ffffff;
        border: 1px solid #bdbdbd70;
        height: 40px;
        border-radius: 5px;
        font-size: 13px;
    }
    .cep-resultado {
        margin-top: 10px;
        font-size: 14px;
        margin-bottom: -10px;
    }
    .cep-error {
        color: rgb(232, 28, 36);
    }
    .frete-resultado {
        margin-top: 15px;
        display: none;
    }
    .frete-resultado .table {
        margin-left: 0;
    }
    .frete-resultado .table th {
        padding: 10px 0;
    }
    .buscaCep {
        width: 40%;
        font-size: 17px;
        color: var(--frete-buscar-fonte);
        border: none;
        background: var(--frete-buscar-btn);
        border-radius: 6px;
        text-align: center;
        cursor: pointer;
    }
    .titulo-calc-frete {
        width: 100%;
        text-align: -webkit-center;
    margin-bottom: 12px;
        font-weight: 800;
        display: block;
        line-height: 1rem;
    }
    #campo-cep:focus {
        box-shadow: none !important;
        outline: none !important;
    }
    .fc_table {
        display: grid;
        margin: 0;
        border-radius: 10px;
        border: 1px solid #ccc;
        overflow: hidden;
        box-shadow: 0 0 14px -11px black inset;
    }
    .fc_table tr {
        display: inline-table;
        width: 100%;
        border-bottom: 1px solid #e9e9e9;
    }
    .fc_table th, .fc_table td {
        width: 100px;
        padding: 10px;
        text-align: center;
        border-right: 1px solid #e9e9e9;
    }
    .fc_tt th {
        background: #f6f6f8;
    }
</style>

<div class="calculo-frete" style="margin: 10px 0 10px;">
    <p class="titulo-calc-frete">Calcule o prazo de entrega</p>
    <div class="frete-form">
        <input type="text" name="cep" data-mask="00000-000" id="campo-cep" placeholder="Digite seu CEP" autocomplete="off" maxlength="9">
        <button type="button" class="buscaCep" onclick="shippingResult()" style="font-weight: 600;">Calcular</button>
    </div>
    <div class="cep-resultado"></div>
    <div class="frete-resultado" style="display: none;">
        <table class="fc_table">
            <thead style="font-size: 14px; line-height: 1.4;">
                <tr class="fc_tt">
                    <th>Entrega</th>
                    <th>Prazo</th>
                    <th>Preço</th>
                </tr>
                <tr style="border-bottom: 1px solid #ccc;">
                    <th><strong style="color:rgb(0, 0, 0);">Padrão</strong></th>
                    <th>10 a 15 dias úteis</th>
                    <th><strong style="color: var(--frete-buscar-precos);">R$39,93</strong></th>
                </tr>
                <tr>
                    <th><strong style="color:rgb(0, 0, 0);">Expresso</strong></th>
                    <th>5 a 10 dias úteis</th>
                    <th><strong style="color: var(--frete-buscar-precos);">R$47,58</strong></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script>
    // Função para aplicar a máscara de CEP
    function applyCepMask(value) {
        value = value.replace(/\D/g, '');
        if (value.length > 5) {
            return value.slice(0, 5) + '-' + value.slice(5, 8);
        }
        return value;
    }

    // Função principal para buscar informações do CEP
    async function shippingResult() {
        var cepValue = document.getElementById("campo-cep").value;
        var cepUnmasked = cepValue.replace(/\D/g, '');
        var cepRegex = /^[0-9]{8}$/;

        if (cepRegex.test(cepUnmasked)) {
            try {
                // Tentativa de consulta na BrasilAPI
                const brasilApiUrl = `https://brasilapi.com.br/api/cep/v1/${cepUnmasked}`;
                const responseBrasilApi = await fetch(brasilApiUrl);

                if (responseBrasilApi.ok) {
                    const data = await responseBrasilApi.json();
                    showShippingResult(data, "brasilapi");
                    return;
                }

                // Caso a BrasilAPI falhe, tenta a OpenCEP
                const openCepUrl = `https://opencep.com/v1/${cepUnmasked}.json`;
                const responseOpenCep = await fetch(openCepUrl);

                if (responseOpenCep.ok) {
                    const data = await responseOpenCep.json();
                    showShippingResult(data, "opencep");
                    return;
                }

                throw new Error('Nenhuma API retornou dados válidos.');
            } catch (error) {
                console.error('Erro na requisição:', error);
                document.querySelector(".cep-resultado").innerHTML =
                    '<span class="cep-error">Erro ao consultar o CEP. Tente novamente mais tarde.</span>';
            }
        } else {
            document.querySelector(".cep-resultado").innerHTML =
                '<span class="cep-error">Formato de CEP Inválido.</span>';
        }
    }

    // Exibir o resultado do CEP
    function showShippingResult(data, source) {
        document.querySelector(".frete-resultado").style.display = "none";

        let logradouro, bairro, localidade, uf;

        if (source === "brasilapi") {
            logradouro = data.street || "Não informado";
            bairro = data.neighborhood || "Não informado";
            localidade = data.city || "Não informado";
            uf = data.state || "Não informado";
        } else if (source === "opencep") {
            logradouro = data.logradouro || "Não informado";
            bairro = data.bairro || "Não informado";
            localidade = data.localidade || "Não informado";
            uf = data.uf || "Não informado";
        }

        if (!data.cep) {
            document.querySelector(".cep-resultado").innerHTML =
                '<span class="cep-error">CEP não encontrado.</span>';
            return;
        }

        document.querySelector(".cep-resultado").innerHTML = 
            '<span style="font-weight: 600; color: var(--frete-buscar-localizacao);">' +
            `${logradouro} - ${bairro} - ${localidade} - ${uf}` +
            '</span>';

        document.querySelector(".frete-resultado").style.display = "block";
    }

    // Aplicar a máscara no campo de CEP
    document.getElementById("campo-cep").addEventListener("input", function(e) {
        var value = e.target.value;
        e.target.value = applyCepMask(value);
    });
</script>
