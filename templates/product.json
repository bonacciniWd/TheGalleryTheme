    "custom_liquid_QjP7ag": {
      "type": "custom-liquid",
      "settings": {
        "custom_liquid": "{% if product.media.size > 0 %}\n  <div class=\"product-gallery\">\n    <button id=\"toggle-gallery\" class=\"gallery-button\">Mostrar / Esconder</button>\n  </div>\n\n  <div id=\"background-gallery\" class=\"background-gallery\">\n    {% for media in product.media %}\n      {% if media.media_type == 'image' %}\n        <div class=\"background-image\" style=\"background-image: url('{{ media | img_url: '2048x2048' }}');\"></div>\n      {% endif %}\n    {% endfor %}\n  </div>\n{% endif %}\n\n<style>\n  .product-gallery {\n    text-align: center;\n    margin-top: 20px;\n  }\n\n  .gallery-button {\n    background-color: black;\n    color: white;\n    padding: 10px 20px;\n    border: none;\n    cursor: pointer;\n    border-radius: 5px;\n    transition: background 0.3s;\n    position: relative;\n    z-index: 10;\n  }\n\n  .gallery-button:hover {\n    background-color: #facc15;\n    color: black;\n  }\n\n  /* Container das imagens de fundo */\n  .background-gallery {\n    display: none; /* Começa escondido */\n    position: fixed;\n    top: 0;\n    left: 0;\n    width: 100%;\n    height: 100%;\n    z-index: 5;\n    overflow: hidden;\n  }\n\n  /* Cada imagem será um \"fundo de página\" */\n  .background-image {\n    background-size: cover;\n    background-position: center;\n    background-repeat: no-repeat;\n    width: 100%;\n    height: 100%;\n    position: absolute;\n    animation: fadeIn 1s ease-out;\n    opacity: 0; /* Inicia invisível */\n  }\n\n  /* Efeito de fade-in para as imagens */\n  @keyframes fadeIn {\n    from {\n      opacity: 0;\n    }\n    to {\n      opacity: 1;\n    }\n  }\n</style>\n\n<script>\n  document.addEventListener(\"DOMContentLoaded\", function() {\n    var button = document.getElementById(\"toggle-gallery\");\n    var gallery = document.getElementById(\"background-gallery\");\n    var images = gallery.getElementsByClassName(\"background-image\");\n    var currentIndex = 0;\n\n    // Iniciar a primeira imagem\n    if (images.length > 0) {\n      images[currentIndex].style.opacity = 1;\n    }\n\n    button.addEventListener(\"click\", function() {\n      // Alternar a visibilidade do gallery\n      if (gallery.style.display === \"none\" || gallery.style.display === \"\") {\n        gallery.style.display = \"block\"; // Exibe as imagens no fundo\n\n        // Mostrar a imagem atual\n        if (images.length > 0) {\n          images[currentIndex].style.opacity = 1;\n        }\n      } else {\n        gallery.style.display = \"none\"; // Esconde as imagens\n        if (images.length > 0) {\n          images[currentIndex].style.opacity = 0;\n        }\n      }\n    });\n\n    // Funcionalidade para alternar as imagens\n    gallery.addEventListener('click', function() {\n      if (images.length > 0) {\n        images[currentIndex].style.opacity = 0; // Esconde a imagem atual\n        currentIndex = (currentIndex + 1) % images.length; // Move para a próxima imagem\n        images[currentIndex].style.opacity = 1; // Exibe a próxima imagem\n      }\n    });\n  });\n</script>",
        "color_scheme": "",
        "padding_top": 40,
        "padding_bottom": 52
      }
